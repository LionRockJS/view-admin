<div class="container">
    <h1 class="display-3">Change Name</h1>
    <form action="/account/person" method="post">
        <input type="hidden" name="destination" value="/account" />
        <div class="form-group">
            <div>enter your name</div>
        </div>

        <div class="form-group">
            {{ username }}
        </div>

        <div class="form-group">
            <label for="first_name">First Name</label>
            <input id="first_name" name=":first_name" type="text" class="form-control" value="{{ item.first_name }}" placeholder="First Name"/>
        </div>

        <div class="form-group">
            <label for="last_name">Last Name</label>
            <input id="last_name" name=":last_name" type="text" class="form-control" value="{{ item.last_name }}" placeholder="Last Name"/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>