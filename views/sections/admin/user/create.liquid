<div class="container mx-auto px-4">
    <h2 class="text-3xl mb-4">Create User</h2>
    <form autocomplete="off" action="/admin/users/create-user" method="post">
        <div class="mb-3 w-full relative">
            <div class="absolute text-xs bg-gray-50 -top-2 left-2 text-gray-500">Name</div>
            <input type="text" name="first_name" aria-label="Name" id="first_name" 
                class="text-ellipsis transition-[background] duration-[50000s] block font-sans text-xl w-full ps-2 py-2 bg-white border-1 border-gray-300 rounded grow p-0 text-gray-800 placeholder:text-gray-400 placeholder:font-[200] focus:outline-none focus:text-highlight" 
                value="" 
                placeholder="Your Name" 
                required="">
        </div>
        <div class="mb-3 w-full relative">
            <div class="absolute text-xs bg-gray-50 -top-2 left-2 text-gray-500">User Name</div>
            <input type="text" name="username" aria-label="User Name" id="username" 
                class="text-ellipsis transition-[background] duration-[50000s] block font-sans text-xl w-full ps-2 py-2 bg-white border-1 border-gray-300 rounded grow p-0 text-gray-800 placeholder:text-gray-400 placeholder:font-[200] focus:outline-none focus:text-highlight" 
                value="" 
                placeholder="User Name" 
                required="">
        </div>
        <div class="mb-3 w-full relative">
            <div class="absolute text-xs bg-gray-50 -top-2 left-2 text-gray-500">Password</div>
            <input type="password" name="password" aria-label="Password" id="password" 
                class="text-ellipsis transition-[background] duration-[50000s] block font-sans text-xl w-full ps-2 py-2 bg-white border-1 border-gray-300 rounded grow p-0 text-gray-800 placeholder:text-gray-400 placeholder:font-[200] focus:outline-none focus:text-highlight" 
                value="" 
                placeholder="Password" 
                required="">
        </div>

        <div class="w-full mb-3">
            {% for role in roles %}
                <div class="relative flex items-start">
                    <div class="flex h-6 items-center">
                        <input id="role_{{ role.name | downcase }}" name="roles[]" type="checkbox" value="{{ role.name }}" {% if forloop.first %}checked{% endif %} class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                    </div>
                    <div class="ml-3 text-sm leading-6">
                        <label for="role_{{ role.name | downcase }}" class="font-medium text-gray-900">{{ role.name }}</label>
                    </div>
                </div>
            {% endfor %}
        </div>
        <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Create account</button>
    </form>
</div>